<div class="container-fluid">
    <div class="row-fluid">
      <ul class="breadcrumb" style="position:relative;">
        <li><a href="#">Magic</a><span class="divider">/</span></li>
        <li><a href="/customers">顾客管理</a><span class="divider">/</span></li>
        <li class="active"><%= @customer.name %></li>
        <!-- <li style="position:absolute;right:15px;top:6px;"><i class="icon-cog"></i><a class="btn_alert" href="order_settings.html">PG设置</a></li> -->
      </ul><!-- breadcrumb -->

      <div class="mar_t10">
        <form class="well">
          <div class="page-header">
            <h4>概况</h4>
          </div>
          <div class="row-fluid show-grid">
            <div class="span4">
              <%= label_tag "s","购买ID:",:class => "controls pull-left", :style => "width:150px;text-align:right" %>
              <%= @customer.name %>
            </div>
            <div class="span4">
              <%= label_tag "s","购买订单金额:",:class => "controls pull-left", :style => "width:150px;text-align:right" %>
              <%= @customer.orders_price %>元
            </div>
            <div class="span4">
              <%= label_tag "s","购买订单数:",:class => "controls pull-left", :style => "width:150px;text-align:right" %>
              <%= @customer.transaction_histories.count %>
            </div>
          </div>
          <div class="row-fluid show-grid">
            <div class="span4">
              <%= label_tag "s","已成交金额:",:class => "controls pull-left", :style => "width:150px;text-align:right" %>
              <%= @customer.turnover %>元
            </div>
            <div class="span4">
              <%= label_tag "s","最后购买时间:",:class => "controls pull-left", :style => "width:150px;text-align:right" %>
              <%= @customer.the_first.created.to_s(:db) rescue nil %>
            </div>
          </div>
        </form>
      </div>

      <div class="mar_t10">        
        <form  class="well well-small">
          <div class="page-header">
            <h4>数据图</h4>
              <%= select_tag "reports",options_for_select([["按月查询","months"],["按年查询","years"],["按日查询","days"],["按周查询","weeks"]]),:class => "select2-container input-small pull-right select2 radius_no_rb",:id => "reports" %>
          </div>
          <div class="tab-pane active chart_opts" id="tab1">
            <div id="chartdiv" style="width: 100%; height: 400px;"></div>
          </div>
        </form>
      </div>
    </div>
  </div>

<% content_for :tail do %>
<script type="text/javascript" charset="utf-8">
  $(function() {

    var chartDataYears = <%= raw reports(@customer)["years"] %>;
    var chartDataMonths = <%= raw reports(@customer)["months"] %>;
    var chartDataDays = <%= raw reports(@customer)["days"] %>;
    var chartDataWeeks = <%= raw reports(@customer)["weeks"] %>;

    var chartDataYears = chartDataYears.map(function(e){return JSON.parse(e)})
    var chartDataMonths = chartDataMonths.map(function(e){return JSON.parse(e)})
    var chartDataDays = chartDataDays.map(function(e){return JSON.parse(e)})
    var chartDataWeeks = chartDataWeeks.map(function(e){return JSON.parse(e)})
    AmCharts.ready(chartDataMonths);
    $("#reports").change(function(){
      if($(this).val() == "years"){
        AmCharts.ready(chartDataYears);
      }else if($(this).val() == "months"){
        AmCharts.ready(chartDataMonths);
      }else if($(this).val() == "days"){
        AmCharts.ready(chartDataDays);
      }else if($(this).val() == "weeks"){
        AmCharts.ready(chartDataWeeks);
      }
    })
    
  });
</script>
<% end %>