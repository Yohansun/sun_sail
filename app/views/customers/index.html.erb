<div class="container-fluid">
  <div class="row-fluid">
    <%= render partial: "layouts/all_crumbs" %>
    <ul class="nav nav-tabs">
      <% CustomersController::ACTIONS.each do |action,name| %>
      <li class="<%= params[:action].eql?(action.to_s) ? "active" : "" %>">
        <a href="/customers/<%= action.to_s.gsub(/index/,'') %>"><%= name %></a>
      </li>
      <% end %>
    </ul>
    <form ation="/trades_reports" class="well form-horizontal">
      <div class="control-group nomargin">
        <%= render :partial => "search",:locals => {:path => customers_path} %>
      </div>
    </form>
    <div class="btn-toolbar">
      <div class="btn-group">
        <button class="btn btn-warning">操作</button>
        <button class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li>
            <%= link_to "导出","#",:onclick => "exportChecked('#{format_url(:xls)}')" %>
          </li>
        </ul>
      </div>
    </div>
    <table class="table table-striped table-bordered mar_t10">
      <thead>
        <th><input id="checkbox_all" type="checkbox" value="option1"></th>
        <th>顾客ID</th>
        <th>顾客联系电话</th>
        <th>顾客邮箱</th>
        <th>省</th>
        <th>市</th>
        <th>区</th>
        <th>地址</th>
      </thead>
      <tbody>
        <% @customers.each_with_index do |customer,index| %>
        <tr class="export_excel">
          <td><%= check_box_tag "search[_id_in][]",customer.id %></th>
          <td><%= customer.name %></th>                <!--Newly Add-->
          <td><%= customer.receiver_mobile %></th>
          <td><%= customer.email %></th>
          <td><%= customer.receiver_state %></th>
          <td><%= customer.receiver_city %></th>
          <td><%= customer.receiver_district %></th>
          <td><%= customer.receiver_address %></th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @customers %>
</div>