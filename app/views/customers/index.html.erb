<div class="row-fluid">
  <div class="span10 w100">
    <%= render "nav" %>
    <div class="tab-content">
      <div class="tab-pane active" id="stock_check">
        <form ation="/trades_reports" class="well form-horizontal">
          <div class="control-group nomargin">
            <%= render :partial => "search",:locals => {:path => customers_path} %>
          </div>
        </form>
      </div> 
      <div class="btn-toolbar">
        <div class="btn-group">
          <button class="btn btn-warning">操作</button>
          <button class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li>
              <%= link_to "导出","#",:onclick => "exportChecked('#{format_url(:xls)}')" %>
            </li>
            <li>
              <%= link_to "详细", "#",:class => "validateValues",:goto => customer_path(1),:request => "get" %>
            </li>
          </ul>
        </div>
      </div>
      <form action="customers" method="get" accept-charset="utf-8" id="customers">
        <table class="table table-striped table-bordered mar_t10">
          <thead>
            <th><input id="checkbox_all" type="checkbox" value="option1"></th>
            <th>
              <a href="/customers?search_custom[meta_sort]=id.asc">顾客ID</a>
            </th>
            <th>
              <a href="/customers?search_custom[meta_sort]=receiver_mobile.asc">顾客联系电话</a>
            </th>
            <th>
              <a href="/customers?search_custom[meta_sort]=email.asc">顾客邮箱</a>
            </th>
            <th>
              <a href="/customers?search_custom[meta_sort]=receiver_state.asc">省</a>
            </th>
            <th>
              <a href="/customers?search_custom[meta_sort]=receiver_city.asc">市</a>
            </th>
            <th>
              <a href="/customers?search_custom[meta_sort]=receiver_district.asc">区</a>
            </th>
            <th>
              <a href="/customers?search_custom[meta_sort]=receiver_address.asc">地址</a>
            </th>
          </thead>
          <tbody>
            <% @customers.each_with_index do |customer,index| %>
            <tr class="export_excel">
              <td><%= check_box_tag "search[_id_in][]",customer.id %></th>
              <td><%= customer.name %></th>                <!--Newly Add-->
              <td><%= customer.receiver_mobile %></th>
              <td><%= customer.email %></th>
              <td><%= customer.receiver_state %></th>
              <td><%= customer.receiver_city %></th>
              <td><%= customer.receiver_district %></th>
              <td><%= customer.receiver_address %></th>
            </tr>
            <% end %>
          </tbody>
        </table>
      </form>
    </div>
  </div>
  <div class='clearfix'>
    <div class="pull-right" style="margin-left: 5px;margin-top: -2px;">
      <%= paginate @customers %>
    </div>
    <!-- <p></p> -->
    <%= form_tag("/customers", :method => "get", :class => 'pagination trade_count_info form-inline pull-right') do %>
    <input style="visibility:hidden;" name="page" value="<%= params[:page]%>"/>
    <label style="color:#005580;">当前每页显示：</label>
    <%=select_tag :number, options_for_select([["加载20项","20"],
            ["加载50项","50"],
            ["加载100项", "100"]], params[:number]),  :class => 'nomargin input-medium', :onchange => "this.form.submit();" %>
    <%- end -%>
  </div>
</div>
