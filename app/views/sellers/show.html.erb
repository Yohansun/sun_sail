<div class="container-fluid">
  <header class="jumbotron subhead" id="overview">
    <div class="subnav">
      <ul class="nav nav-pills">
        <li class="dropdown active">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">
            经销商
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><a href="/sellers">所有经销商</a></li>
            <li><a>最新经销商</a></li>
            <li><a href="#">已关闭经销商</a></li>
            <!-- <li><a href="history.html">历史交易</a></li> -->
          </ul>
        </li>
        <li><a href="/areas">地域管理</a></li>
        <!-- <li><a href="history.html">历史交易</a></li> -->
      </ul>
    </div>
  </header>

  <div class="row-fluid">
    <ul class="breadcrumb" style="position:relative;">
      <li><a href="/">Magic</a><span class="divider">/</span></li>
      <li class="active"><a href='/sellers'>经销机构管理</a></li>
      <li style="position:absolute;right:15px;top:6px;">
        <i class="icon-plus"></i><%= link_to "新增经销商", new_seller_path(:p_id => params[:id]), :class=>"btn_alert"%>
      </li>
    </ul><!-- breadcrumb -->

    <form class="well form-search">
      <fieldset class="form-inline">
        <div class="controls">
          <select id="search_key" class="input-large">
            <option value='id'>编号</option>
            <option value='fullname'>全称</option>
            <option value='name'>简称</option>
            <option value='address'>地址</option>
          </select>

          <div class="input-append">
            <input type="text" id="search_value" class="input-large">
            <button type="button" class="btn" id='seller_search'>过滤</button>
          </div>
        </div>
      </fieldset>
    </form>

    <div class="controls clearfix">
      <div class="btns btn-group pull-right">
        <a href="#" class="btn btn-success btn_mar4">显示设置</a>
        <button href="#" data-toggle="dropdown" class="btn dropdown-toggle btn-success dropdown_check_btn">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown_check" id="dropdown_check">
          <li>
            <label class="checkbox" style="padding-left:35px;">
              <input type="checkbox" value="option1">订单编号
            </label>
          </li>

          <li>
            <label class="checkbox" style="padding-left:35px;">
              <input type="checkbox" value="option1">
              订单状态
            </label>
          </li>
          <li>
            <label class="checkbox" style="padding-left:35px;">
              <input type="checkbox" value="option1">
              订单金额
            </label>
          </li>
          <li>
            <label class="checkbox" style="padding-left:35px;">
              <input type="checkbox" value="option1">
              客户姓名
            </label>
          </li>
          <li>
            <label class="checkbox" style="padding-left:35px;">
              <input type="checkbox" value="option1">
              联系方式
            </label>
          </li>

          <li>
            <label class="checkbox" style="padding-left:35px;">
              <input type="checkbox" value="option1">
              客户留言
            </label>
          </li>

          <li>
            <label class="checkbox" style="padding-left:35px;">
              <input type="checkbox" value="option1">
              订单编号
            </label>
          </li>
        </ul>
      </div>

      <div class="btns btn-group pull-left">
        <a href="#" class="btn btn-warning">导出数据</a>
      </div>
    </div>

    <table class="table table-striped table-bordered table-condensed td_colors mar_t">
      <thead>
        <tr>
          <th>编号</th>
          <th>经销商全称</th>
          <th>经销商简称</th>
          <th>联系电话</th>
          <th>联系人</th>
          <th>地址</th>
          <th>下级经销商</th>
          <th>状态</th>
          <th>操作</th>
        </tr>
      </thead>

      <tbody id="seller_rows">
        <%= render 'row' %>
      </tbody>
    </table>
  </div>
</div>

<div id="dealer_login" class="modal hide fade" tabindex="-1">
  <div class="modal-header">
    <h3>登录账号设置
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </h3>
  </div><!-- modal-header -->
  <div class="modal-body clearfix">
    <div id='seller_id_container' style='display:none'></div>
    <div id='user_table'>
    </div>
    <div class="pull-right well w_35">
      <div class="input-append">
        <input type="text" id="search_users_input" class="input-large">
        <button type="button" class="btn btn-primary" id='search_users'>搜索用户</button>
      </div>
      <div id='user_list'>
      </div>
    </div>
  </div><!-- modal-body -->
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal" >取消</a>
    <a href="#" class="btn btn-primary">确定</a>
  </div><!-- modal-footer -->
</div><!-- seller_area -->
