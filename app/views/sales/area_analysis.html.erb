<div class="container-fluid">
  
  <%= render 'header' %>

  <div class="row-fluid">
    <ul class="breadcrumb" style="position:relative;">
      <li><a href="/">Magic</a><span class="divider">/</span></li>
      <li><a href="/trade_reports">数据魔方</a><span class="divider">/</span></li>
      <li><a href="#">买家分析</a><span class="divider">/</span></li>
      <li class="active">买家地域分析</li>
    </ul><!-- breadcrumb -->

    <%= render 'select_time' %>

    <div class="controls clearfix">
      <div class="btns btn-group pull-left">
        <a href="#" class="btn btn-warning"><!-- <i class="icon-user icon-white"></i> -->导出数据</a>
        <!-- <button href="#" data-toggle="dropdown" class="btn dropdown-toggle btn-warning btn_left4"><span class="caret"></span></button> -->
        <!-- <ul class="dropdown-menu">
          <li><a href="#">Profile</a></li>
          <li class="divider"></li>
          <li><a href="login.html">Sign Out</a></li>
        </ul> -->
      </div>
    </div>
    <div class="mar_t10">
      <ul class="nav nav-tabs reset_border nomargin" id="myTab_sub">
        <li class="active"><a href="#tab1" data-toggle="tab">数据概况</a></li>
      </ul>
      <div class="tab-content reset_border">
        <div class="tab-pane active chart_opts" id="tab1">
          <ul class="clearfix aug_data_tops nomargin">
            <li class="span2 noborder">
            <%- @area_data.each_with_index do |value, i| %>
              <div>
                <a href="#" class="pull-right"><!--<img src="/assets/aug_details.jpg">--></a>买家集中省份TOP<%= i + 1 %>            
              </div>
              <big><strong><%= value.try(:[],0) %></strong></big>
              <p>该省购买人数<%= value.try(:[],2) %></p>
            </li>
            <%- break if i == 4 %>
            <li class="span2">
            <%- end %>
          </ul>
        </div>
       </div>
    </div>


    <div class="mar_t10">
      <ul class="nav nav-tabs reset_border nomargin" id="myTab_sub">
        <li class="active"><a href="#tab2" data-toggle="tab">数据报表</a></li>
      </ul>
      <div class="tab-content reset_border padding_t20">
        <div class="tab-pane active chart_opts" id="tab1">
          <table class="table table-striped table-bordered table-condensed td_colors mar_t">
            <thead>
              <tr>
                <th>序号</th>
                <th>省份</th>
                <th>成交金额占比</th>
                <th>成交人数</th>
                <th>成交笔数</th>
              </tr>
            </thead>
            <tbody>
              <%- @area_data.each_with_index do |value, j| %>
              <tr>
                <td><%= j + 1 %></td>
                <td><%= value.try(:[],0) %></td>
                <td><%= value.try(:[],1).to_s + "%" %></td>
                <td><%= value.try(:[],2) %></td>
                <td><%= value.try(:[],3) %></td>
              </tr>
              <%- end %>
            </tbody> 
          </table>
        </div>
       </div>
    </div>

  </div>
</div>