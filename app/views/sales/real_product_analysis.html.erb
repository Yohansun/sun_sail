<div class="container-fluid">
  
  <%= render 'header' %>

  <div class="row-fluid">
	  <ul class="breadcrumb" style="position:relative;">
	    <li><a href="/">Magic</a><span class="divider">/</span></li>
	    <li><a href="/sales">数据魔方</a><span class="divider">/</span></li>
	    <li><a href="/sales/product_analysis">销售分析</a><span class="divider">/</span></li>
	    <li class="active">热销产品分析</li>
    </ul><!-- breadcrumb -->

    <%= render 'select_time' %>

    <!-- <div class="controls clearfix">
      <div class="btns btn-group pull-left">
        <a href="#" class="btn btn-warning">导出数据</a>
      </div>
    </div> -->
    
    <div class="mar_t10">
      <ul class="nav nav-tabs reset_border nomargin" id="myTab_sub">
        <li class="active"><a href="#tab1" data-toggle="tab">数据报表</a></li>
        <li><a href="#tab2" data-toggle="tab">飙升产品</a></li>
      </ul>
      <div class="tab-content reset_border padding_t20">
        <div class="tab-pane active chart_opts" id="tab1">
			    <table class="table table-striped table-bordered table-condensed td_colors mar_t">
		        <thead>
		          <tr>
		          	<th>序号</th>
		            <th>宝贝</th>
		            <th>标题</th>
		            <th>成交商品数</th>
		            <th>成交金额</th>
		            <th>平均成交价格</th>
		            <th>宝贝详情</th>
		          </tr>
		        </thead>
		        <tbody>
		        	<%- i = 0 %>
		        	<% @product_data[0].each do |key, value| %>
		        	<%- p = Product.find_by_iid(key) %>
		          	<%- if p %>
			          <tr>
			            <td><%= i += 1 %></td>
			            <td><a href="#"><img src="<%= p.product_image %>" /></a></td>
			            <td width="200"><%= link_to "#{p.name}", product_path(p.id) %></td>
			            <td><%= value.try(:[],1) %></td>
			            <td><%= value.try(:[],0) %></td>
			            <td><%= value.try(:[],2) %></td>
			            <td><%= link_to '查看详情', product_path(p.id) %></td>
			          </tr>
                <%- end %>
		          <%- end %>
		        </tbody>
	        </table>
        </div>
          
        <div class="tab-pane chart_opts" id="tab2">
		      <table class="table table-striped table-bordered table-condensed td_colors mar_t">
            <thead>
              <tr>
              	<th>序号</th>
                <th>宝贝</th>
                <th>标题</th>
                <th>环比增长率</th>
                <th>成交商品数</th>
                <th>成交金额</th>
                <th>平均成交价格</th>
                <th>宝贝详情</th>
              </tr>
            </thead>
            <tbody>
            	<%- j = 0 %>
            	<% @product_data[1].each do |value| %>
            	<%- lp = Product.find_by_iid(value[4]) %>
            	  <%- if lp %>
	              <tr>
	                <td><%= j += 1 %></td>
	                <td><a href="#"><img src="<%= lp.product_image %>" /></a></td>
	                <td width="200"><%= link_to "#{lp.name}", product_path(lp.id) %></td>
                  <td><%= (value.try(:[],3)*100).to_i.to_s + "%" %></td>
	                <td><%= value.try(:[],1) %></td>
	                <td><%= value.try(:[],0) %></td>
	                <td><%= value.try(:[],2) %></td>
	                <td><%= link_to '查看详情', product_path(lp.id) %></td>
	              </tr>
	              <%- break if j == 10 %>
	              <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</div>