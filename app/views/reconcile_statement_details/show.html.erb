<div class="container-fluid">
  <header class="jumbotron subhead" id="overview">
    <div class="subnav">
      <ul class="nav nav-pills">
        <li class="active"><a href="#">运营商对账</a></li>
        <li><a href="#">经销商对账</a></li>
        <li><a href="#">财务对账</a></li>
      </ul>
    </div>
  </header>
  <div class="row-fluid">
    <ul class="breadcrumb" style="position:relative;">
      <li><a href="#">Magic</a><span class="divider">/</span></li>
      <li><a href="checking.html">财务管理</a><span class="divider">/</span></li>
      <li><a href="#">运营商对账</a><span class="divider">/</span></li>
      <li><a href="#">2012-06</a><span class="divider">/</span></li>
      <li class="active">支付宝明细</li>
    </ul><!-- breadcrumb -->

    <div class="btns">
      <a href="javascript:;" class="btn btn-warning">导出数据</a>
      <a data-toggle="modal" href="javascript:;" class="btn btn-warning">打印</a>
    </div>

    <table class="table table-bordered table-hover mar_t5">
      <thead>
        <tr>
          <th>订单编号</th>
          <th>订单来源</th>
          <th>顾客姓名</th>
          <th>送货地址</th>
          <% judge_money_type_th(@money_type).each do |info| %>
          <th><%= info %></th>
          <% end %>
          <th>到账日期</th>
          <th>订单状态</th>
        </tr>
      </thead>
      <tbody>
        <% TradeDecorator.decorate(@trade_details).each do |trade| %>
        <tr>
          <td><%= trade.tid %></td>
          <td><%= trade.trade_source %></td>
          <td><%= trade.receiver_name %></td>
          <td><%= trade.receiver_address %></td>
          <% judge_money_type_td(trade, @money_type).each do |info| %>
          <td><%= info %></td>
          <% end %>
          <td><%= trade.pay_time.strftime("%Y-%m-%d") %></td>
          <td><%= trade.status_text %></td>
        </tr>
        <% end %>
        <tr>
          <td>总计</td>
          <td></td>
          <td></td>
          <td></td>
          <% judge_money_type_total(@trade_details, @money_type).each do |info| %>
          <th><%= info %></th>
          <% end %>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>

    <%= paginate @trade_details %>
  </div>
  <hr>
</div>
