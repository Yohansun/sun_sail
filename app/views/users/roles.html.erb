<div class="container-fluid">
  <div class="row-fluid">
    <%= render partial: "layouts/setting_nav" %>
    <div class="span10">
      <ul class="nav nav-tabs ">
        <li><a href="/users">用户</a></li>
        <li class="active"><a href="/users/roles">角色</a></li>
        <li><a href="/users/limits">权限</a></li>
      </ul><!-- nav-tabs -->
      <div class="tab-content">
        <form action="/users/limits" method="get" accept-charset="utf-8" id="roles_form">
        <div class="tab-pane active" id="users">
          <div class="btn-toolbar">
          <div class="btn-group">
            <button class="btn btn-warning">操作</button>
            <button class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><a href="javascript:$('#roles_form').submit()" data-toggle="modal" class="js-set-limit">设置权限</a></li>
            </ul>
          </div><!-- btn-group -->
        </div><!-- btn-groups end -->

        <table class="table table-hover table-bordered table-striped table-condensed js-table">
          <thead>
            <tr>
              <th width="1%">
              <th width="15%">角色</th>
            </tr>
          </thead>
          <tbody>
            <%- @roles.each do |role| %>
            <tr>
              <td><input type="radio" name="role_id" value="<%= role.id %>"></td>  
              <td><%= role.role_s %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      </form>
    </div>
    </div>
  </div>
</div>
