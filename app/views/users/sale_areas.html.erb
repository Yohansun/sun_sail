<% content_for :sub_nav do %>
  <ul class="nav nav-tabs">
    <li>
      <a href="/edit">个人设置</a>
    </li>
    <li class="active">
      <a href="/sale_areas">绑定区域</a>
    </li>
  </ul>
<% end %>
<table class="table table-striped table-bordered mar_t10" id="customers_table">
  <thead>
    <tr>
      <th>地区编号</th>
      <th>省</th>
      <th>市</th>
      <th>区</th>
    </tr>
  </thead>
  <tbody>
    <% @leaves.each do |leave| %>
      <tr>
        <td><%= leave.zip %></td>
        <% (find_parent(leave) << nil).take(3).each do |l| %>
          <td><%= l.try(:name) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @leaves %>