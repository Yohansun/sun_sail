<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2 bs-docs-sidebar">
      <ul class="nav nav-list bs-docs-sidenav affix span2">
        <li class="active"><%= link_to raw("<i class='icon-chevron-right'></i>个人中心"), show_me_users_path %></li>
        <li><%= link_to raw("<i class='icon-chevron-right'></i>修改信息"), edit_user_registration_path %></li>
      </ul>
    </div>
    <div class="span10">
      <ul class="nav nav-tabs js-nav_tabs">
        <li class="active"><a href="#mycenter" data-toggle="tab">个人中心</a></li>
      </ul><!-- nav-tabs -->

      <div class="tab-content">
        <div class="tab-pane active" id="mycenter">
          <form class="form-horizontal">
            <div class="row-fluid">
              <fieldset class="span12">
                <div class="control-group form-inline">
                  <label class="control-label">用户名：</label>
                  <p class="help-inline mt5"><%= @user.username %></p>
                </div>
                <div class="control-group">
                  <label class="control-label">姓名：</label>
                  <p class="help-inline mt5"><%= @user.name %></p>
                </div>
                <div class="control-group">
                  <label class="control-label">邮箱：</label>
                  <p class="help-inline mt5"><%= @user.email %></p>
                </div>
                <div class="control-group">
                  <label class="control-label">手机：</label>
                  <p class="help-inline mt5"><%= @user.phone %></p>
                </div>
                <div class="control-group">
                  <label class="control-label">角色：</label>
                  <p class="help-inline mt5"><%= @user.present_roles %></p>
                </div>
              </fieldset>
            </div>
          </form>
        </div>
      </div><!-- tab-content end -->
    </div>
  </div>
</div>