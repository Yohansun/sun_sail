<div class="container-fluid">
  <header class="jumbotron subhead" id="overview">
    <div class="subnav">
      <ul class="nav nav-pills">
        <li class="active"><a href="/users">用户管理</a></li>
        <li><a href="/areas">地域管理</a></li>
        <li><a href="/logistics">物流商管理</a></li>
      </ul>
    </div>
  </header>
  <div class="row-fluid">
    <ul class="breadcrumb" style="position:relative;">
      <li><a href="/">Magic</a><span class="divider">/</span></li>
      <li><a href="/users">系统设置</a><span class="divider">/</span></li>
      <li class="active"><a href="/users">用户管理</a></li>
      <li style="position:absolute;right:15px;top:6px;"><%=link_to "新增用户", new_user_path, :class => "btn_alert"%></li>
    </ul><!-- breadcrumb -->

    <%= form_tag search_users_path, :class=>"well form-search" do %>
      <fieldset class="form-inline">
        <div class="controls">
          <%=select_tag "where_name", options_for_select([["用户名","username"],["姓名","name"],["邮箱","email"]]), :value => "#{params[:where_name]}" %>

          <div class="input-append">
            <%= text_field_tag "keyword", '',:value => "#{params[:keyword] if params[:keyword]}", :class => "input-large"%>
            <%= button_tag "过滤", :class => "btn" %>
          </div>
        </div>
      </fieldset>
    <% end %>
    
    <table class="table table-striped table-bordered table-condensed td_colors mar_t">
      <thead>
        <tr>
          <!--<th>选择</th>-->
          <th>用户</th>
          <th>姓名</th>
          <th>邮件地址</th>
          <th>用户组</th>
          <!-- <th>状态</th> -->
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <!--<td></td>-->
          <td><%= user.username %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.present_roles %></td>
          <!-- <td>离线</td> -->

          <td>
            <div class="btn-group">
              <button data-toggle="dropdown" class="btn btn-info dropdown-toggle min_w"><i class="icon-wrench"></i> <span class="caret"></span></button>
              <ul class="dropdown-menu" style="left:-115px;">
                <li><%= link_to "编辑", user_path(user.id)%></li>
               <!--  <li class="divider"></li>
                <li><a href="#">禁用</a></li>
                <li><a href="#">权限设置</a></li>
                <li><a href="#">用户日志</a></li> -->
              </ul>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    
    <%= paginate @users %>
  </div>
</div>