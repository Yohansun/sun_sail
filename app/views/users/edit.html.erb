<div class="container-fluid">
  <header class="jumbotron subhead" id="overview">
    
  </header>
  <div class="row-fluid">
    <ul class="breadcrumb" style="position:relative;">
      <li><a href="/">Magic</a><span class="divider">/</span></li>
      <li><a href="/users">系统设置</a><span class="divider">/</span></li>
      <li><a href="/users">用户管理</a><span class="divider">/</span></li>
      <li><a href="/users"><%=current_user.name%></a><span class="divider">/</span></li>
      <li class="active">编辑</li>
    </ul><!-- breadcrumb -->

    <%= simple_form_for @user, html: {:class =>'well form-horizontal'} do |f| %>
      <fieldset class="add_unit">

        <div class="control-group">
          <%= f.input :email, :label => "邮箱：", class: 'input-xlarge' %>
        </div>
      </fieldset>

      <fieldset class="add_unit">
        <div class="control-group">
          <%= f.input :password, :label => "密码：", class: 'input-xlarge' %>
        </div>

        <div class="control-group">
          <%= f.input :password_confirmation, :label => "确认密码：", class: 'input-xlarge' %>
        </div>
      </fieldset>

      <div class="form-actions">
         <input type='hidden' name="ac" value="<%= params[:ac] ? params[:ac] : params[:action] %>"/>
         <%= f.button :submit, :value => "保存", class: "btn btn-primary edit"%>
      </div>
    <% end %>
  </div>
</div>