    <%= stylesheet_link_tag "application", :media => "all" %>

    <link href="images/favicon.ico" rel="shortcut icon">
    <link href="images/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72">
    <link href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114">
  </head>
  <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <%= link_to image_tag("logo.png"), root_path, class: 'brand' %>
          <% if user_signed_in? -%>

          <div class="btns btn-group pull-right" style="min-width:120px;">
            <button class="btn btn-primary btn_mar4"><i class="icon-user icon-white"></i> <%= current_user.display_name %></button>
            <button data-toggle="dropdown" class="btn btn-primary dropdown-toggle"><span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><%= link_to "注销", destroy_user_session_path, method: :delete %></li>
            </ul>
          </div>

          <ul class="nav nav-pills" id="top-nav">
            <li class="active trades" style="display:none"><a href="#">订单管理</a></li>
            <% if TradeSetting.company != 'dulux' %>
              <li class="trades" style="display:none"><a href="http://shop.nipponpaint.com.cn/admin/orders">官网订单</a></li>
              <li class="trades" style="display:none"><a href="http://shop.nipponpaint.com.cn/admin/taobao_orders">淘宝订单</a></li>
            <% end %>
            <% if current_user.has_role?(:seller) && controller_name == 'stocks' %>
              <li class="stocks"><a href="#">仓库管理</a></li>
            <% end %>
            <% if current_user.has_role?(:admin)  && controller_name != 'home' %>
              <li class="products"><a href="#"><%= top_nav_name %></a></li>
            <% end %>
          </ul>

          <ul class="nav pull-right">
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Magic<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="/trades" class="trades">订单管理</a></li>
                <% if current_user.has_role?(:seller) && current_user.seller %>
                  <li><%= link_to '仓库管理', seller_stocks_path(current_user.seller.id), class: "stocks" %></li>
                <% elsif current_user.has_role?(:admin) %>
                  <li><%= link_to '仓库管理', stocks_path, class: "stocks" %></li>
                <% end %>
                <% if current_user.has_role?(:admin) %>
                <li><%= link_to '商品管理', products_path, class: "products" %></li>
                <li><%= link_to '经销商管理', sellers_path %>
                <li class= "divider"></li>
                <li><a href="/users" class="users">系统设置</a></li>
                <% end %>
              </ul>
            </li>
            <li class="divider-vertical"></li>
          </ul>

          <% unless current_user.has_role?(:seller) %>
          <ul class="nav pull-right">
            <li id="fat-menu" class="dropdown">
              <a href="/alerts"><!-- <span class="badge badge-important" style="background:red;"></span> -->异常中心</a>
            </li>
            <li class="divider-vertical"></li>
          </ul>
          <% end %>

          <!--/.nav-collapse -->
