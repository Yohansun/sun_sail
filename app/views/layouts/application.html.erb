<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% if current_account.try(:key) == 'dulux' %>
    <title><%= current_account.settings.site_title_basic %></title>
    <% else %>
    <title><%= content_for?(:title) ? yield(:title) : "Magic Orders" %></title>
    <% end %>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->
    <script type="text/javascript">
      var current_account = <%= raw current_account.to_json %>;
    </script>
    <%= stylesheet_link_tag "application", :media => "all" %>

    <script>
    var _hmt = _hmt || [];
    (function() {
      var hm = document.createElement("script");
      hm.src = "//hm.baidu.com/hm.js?6b23b42f4ba1488b687b3730263fe7da";
      var s = document.getElementsByTagName("script")[0];
      s.parentNode.insertBefore(hm, s);
    })();
    </script>
  </head>
  <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <%= link_to image_tag("logo.png"), root_path, class: 'brand' %>
          <% if user_signed_in? -%>

          <div class="btns btn-group pull-right" style="min-width:120px;">
            <button class="btn btn-primary btn_mar4"><i class="icon-user icon-white"></i> <%= current_user.display_name %></button>
            <button data-toggle="dropdown" class="btn btn-primary dropdown-toggle"><span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><%= link_to "个人中心", my_alerts_path %></li>
              <li><%= link_to "修改信息", edit_user_path(current_user.id) %></li>
              <li><%= link_to "注销", destroy_user_session_path, method: :delete %></li>
            </ul>
          </div>

          <ul class="nav nav-pills" id="top-nav">
            <li class="active trades" style="display:none"><a href="/app#trades">订单管理</a></li>
            <% if current_account.key == 'nippon' %>
              <li class="trades" style="display:none"><a href="http://shop.nipponpaint.com.cn/admin/orders">官网订单</a></li>
            <% end %>
            <% if ['sales', 'user_activities', 'trade_reports'].include?(controller_name)  %>
              <%- if current_user.has_role?(:admin) %>
                <li class="<%= 'active' if controller_name == 'user_activities'%>"><a href="/user_activities">人员</a></li>
                <li class="<%= 'active' if controller_name == 'trade_reports'%>"><a href="/trade_reports">报表下载</a></li>
                <li class="<%= 'active' if controller_name == 'sales'%>"><a href="/sales/product_analysis">销售</a></li>
               <%- else %>
                <li class="<%= 'active' if controller_name == 'trade_reports'%>"><a href="/trade_reports">报表下载</a>
               <%- end %>
            <% end %>
            <% if current_user.has_role?(:admin)  && controller_name != 'home' %>
              <li class="products"><a href="#"><%= top_nav_name %></a></li>
            <% end %>
          </ul>

          <ul class="nav pull-right">
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Magic<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="/app#trades" class="trades">订单管理</a></li>
                <%- if  current_user.has_role?(:admin)%>
                  <li><a href="/sales">数据魔方</a></li>
                <%- elsif  current_user.has_role?(:cs) ||  current_user.has_role?(:seller) %>
                  <li><a href="/trade_reports">数据魔方</a></li>
                <%- end %>
                <li><%= link_to '仓库管理', stock_path_by_user, class: "stocks" %></li>
                <% if current_user.has_role?(:admin) %>
                <li><%= link_to '商品管理', products_path, class: "products" %></li>
                <li><%= link_to '经销商管理', sellers_path %>
                <% if current_account.settings.enable_module_wangwang == true %>
                <li><a href="/callcenter/contrastive_performance">客服管理</a></li>
                <% end %>
                <li class= "divider"></li>
                <li><a href="/users" class="users">系统设置</a></li>
                <% end %>
              </ul>
            </li>
            <li class="divider-vertical"></li>
          </ul>
          <%- if current_user.has_multiple_account? -%>
            <ul class="nav pull-right">
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  帐户(<%= current_account.name %>)<b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <%- current_user.accounts.each do |account| -%>
                  <li><%= link_to account.name, switch_account_path(id: account.id) %></li>
                  <%- end -%>
                </ul>
              </li>
              <li class="divider-vertical"></li>
            </ul>
          <%- end -%>
          <% if (current_user.has_role?(:seller) && current_user.seller) || (current_user.has_role?(:admin)) || (current_user.has_role?(:cs)) %>
            <ul class="nav pull-right">
              <li id="fat-menu" class="dropdown">
                <a href="/alerts"><span class="badge badge-important" style="background:red;">New</span>异常中心</a>
              </li>
              <li class="divider-vertical"></li>
            </ul>
          <%- end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <%= yield %>
    </div> <!-- /container -->
    <footer><p>&copy; Doorder/NIO team 2012</p></footer>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "/areas.js" %>
    <%= yield :tail -%>
  </body>
</html>
