<%= simple_form_for(@trade_search, :remote=>request.xhr?, :html => { :class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%=f.input :name,   :label=>"名称"%>
    <div class="control-group boolean optional">
        <%=f.label :show_types, :label=>"显示方式"%>
        <div class="controls form-inline">
            <label><%=f.check_box :show_in_tabs%>标签</label>
            <label><%=f.check_box :show_in_simple_model%>快捷搜索</label>
        </div>
    </div>    
    <%=f.input :enabled,    :label=>"启用", :as=>:boolean%>

  </div>

  <div class="form-actions">
    <%= f.button :submit, :value=>"更新" %>
  </div>
<% end %>
