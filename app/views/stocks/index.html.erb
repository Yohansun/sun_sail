        <label class="control-label" for="">备注：</label>
        <div class="controls">
          <input type="text" class="input-xlarge" name='stock_history[note]'>
        </div>
      </div>
    </fieldset>
  </div>
  <div class="modal-footer">
    <button type='submit' class="btn btn-primary">确定</button>
  </div>
</form>

