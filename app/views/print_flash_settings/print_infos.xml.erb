<?xml version="1.0" encoding="utf-8" ?>
<data>
  <mobid>1</mobid>
  <mobname><%= @setting.xml_hash["mobname"] %></mobname>
  <mobwidth><%= @setting.xml_hash["mobwidth"] %></mobwidth>
  <mobheight><%= @setting.xml_hash["mobheight"] %></mobheight>
  <mobleft><%= @setting.xml_hash["offsetx"] %></mobleft>
  <mobtop><%= @setting.xml_hash["offsety"] %></mobtop>
  <bgsrc>/temp/bg.png</bgsrc>
  <orderc><%= @logistic.print_image %></orderc>
  <saveurl>/logistics/<%= @logistic.id %>/print_flash_settings/<%= @setting.id %>/update_infos.xml</saveurl>
  <ipos>
    <%- if @setting.xml_hash['ipos'] != nil %>
      <% @setting.xml_hash['ipos'].each do |item| %>
        <item en_name="<%= item['key'] %>" cn_name="<%= item['text']%>">
          <![CDATA[{
            "x":         "<%= item['x'] %>",
            "y":         "<%= item['y'] %>",
            "font":      "<%= item['font'] %>",
            "color":     "<%= item['color'] %>",
            "size":      "<%= item['size'] %>",
            "align":     "<%= item['align'] %>",
            "isbold":    "<%= item['isbold'] %>",
            "underline": "<%= item['underline'] %>",
            "width":     "<%= item['width'] %>",
            "height":    "<%= item['height'] %>",
            "text":      "<%= item['text'] %>",
            "type":      "<%= item['type'] %>",
            "italic":    "<%= item['italic'] %>",
            "position":  "<%= item['position'].present? ? item['position'] : 'absolute' %>",
            "wrap":      "<%= item['wrap'].present? ? item['wrap'] : 'true' %>"
          }]]>
        </item>
      <% end %>
    <%- end %>
  </ipos>
</data>