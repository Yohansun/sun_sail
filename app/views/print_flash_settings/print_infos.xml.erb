<?xml version="1.0" encoding="utf-8" ?>
<data>
  <mobid>1</mobid>
  <mobname><%= @setting.xml_hash["mobname"] %></mobname>
  <mobwidth><%= @setting.xml_hash["mobwidth"] %></mobwidth>
  <mobheight><%= @setting.xml_hash["mobheight"] %></mobheight>
  <offsetx><%= @setting.xml_hash["offsetx"] %></offsetx>
  <offsety><%= @setting.xml_hash["offsety"] %></offsety>
  <bgsrc>/print_files/bg.png</bgsrc>
  <orderc><%= @logistic.xml %></orderc>
  <saveurl>/logistics/<%= @logistic.id %>/print_flash_settings/<%= @setting.id %>/update_infos.xml</saveurl>
  <ipos>
    <% @setting.xml_hash.each do |key, value| %>
      <%- if value.is_a?(Hash) %>
      <item en_name="<%= key %>" cn_name="<%= value['text']%>">
        <![CDATA[{"x":"<%= value['x'] %>",
                  "y":"<%= value['y'] %>",
                  "font":"<%= value['font'] %>",
                  "color":"<%= value['color'] %>",
                  "size":"<%= value['size'] %>",
                  "align":"<%= value['align'] %>",
                  "isbold":"<%= value['isbold'] %>",
                  "underline":"<%= value['underline'] %>",
                  "width":"<%= value['width'] %>",
                  "height":"<%= value['height'] %>",
                  "text":"<%= value['text'] %>",
                  "type":"<%= value['type'] %>",
                  "italic":"<%= value['italic'] %>"}]]>
      </item>
      <%- end %>
    <% end %>
  </ipos>
</data>