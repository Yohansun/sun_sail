<%= simple_form_for @trade, html: {class: 'well form-horizontal re_padding50'} do |f| %>
<fieldset class="group">
  <div class="w_48 pull-left">
    <%= f.input :tid, label: '订单编号：', :input_html =>{ :class => "input-xlarge", value: "000000" + Time.now.to_i.to_s } %>
    <%= f.input :_type, label: '订单类型：', collection: [["淘宝订单", "TaobaoTrade"]], :input_html =>{ :class => "input-xlarge"}, selected: ["淘宝订单", "TaobaoTrade"] %>
    <%= f.input :status, label: '订单状态：', collection: [["等待付款","WAIT_BUYER_PAY"], ["已付款，待发货","WAIT_SELLER_SEND_GOODS"],["已付款，已发货","WAIT_BUYER_CONFIRM_GOODS"],["交易被淘宝关闭","TRADE_CLOSED_BY_TAOBAO"],["交易成功","TRADE_FINISHED"],["交易已关闭","TRADE_CLOSED"]], :input_html =>{ :class => "input-xlarge" }, selected: ["已付款，待发货","WAIT_SELLER_SEND_GOODS"] %>
    <%= f.input :receiver_name, label: '收货人姓名：', :input_html =>{ :class => "input-xlarge", value: "卡卡西" } %>
    <%= f.input :receiver_mobile, label: '收货人手机：', :input_html =>{ :class => "input-xlarge" , value: "1234567" } %>
    <%= f.input :receiver_address, label: '收货人地址：', :input_html =>{ :class => "input-xlarge", value: "火星"} %>
    <%= f.input :seller_memo, as: :text, label: '备注：', :input_html =>{ :class => "input-xlarge" ,rows: 3, value: "小心飞碟哦" } %>
  </div>

  <div class="w_48 pull-left">
    <%= simple_fields_for :orders do |o| %>
      <%= o.input :outer_iid, label: '商品编号：', :input_html =>{ :class => "input-xlarge", value: "000" + Time.now.to_i.to_s } %>
      <%= o.input :title, label: '商品名称：', :input_html =>{ :class => "input-xlarge", value: "银河系漫游指南" } %>
      <%= o.input :num, label: '商品数量：', :input_html =>{ :class => "input-xlarge", value: "1" } %>
      <%= o.input :sku_properties_name, label: '特殊属性：', :input_html =>{ :class => "input-xlarge", value: "沙草纸" } %>
    <% end %>
  </div>

</fieldset>

<div class="form-actions">
  <%= f.button :submit, "保存", :class => "btn btn-primary" %>
  <a href="/app#trades" class="btn">取消</a>
</div>
<% end %>