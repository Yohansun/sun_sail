<?xml version="1.0" encoding="utf-8" ?>
<data>
  <% @trades.each do |trade| %>
  <trade tid="<%= trade.tid %>" company="<%= TradeSetting.shopname %>" nameOfOrganization="doorder" 
    num="<%= trade_item_count(trade) %>" phone="<%= trade.receiver_mobile %>" memo="<%= trade.cs_memo %>" 
    copyright="Magic" receiver="<%= trade.receiver_name %>"
    address="<%= "#{trade.receiver_state} #{trade.receiver_city} #{trade.receiver_district} #{trade.receiver_address}" %>"
    address_xiangxi="" studiocamera="021-60956000转8128" kehu_receiver="<%= trade.receiver_name %>"
    city="<%= trade.receiver_city %>" organization="" kehu_phone="<%= trade.receiver_mobile %>" jijian_name="多乐士官方旗舰店" point="" 
    jijian_dizhi=""
    shoujian_dizhi="<%= "#{trade.receiver_state} #{trade.receiver_city} #{trade.receiver_district} #{trade.receiver_address}" %>"
    shoujian_youbian="" jijian_youbian="" jijian_zuoji="" shoujian_zuoji=""
    address_sheng="" address_shi="" address_zhen="" addressee_sheng="<%= trade.receiver_state %>" 
    addressee_shi="<%= trade.receiver_city %>" addressee_zhen="<%= trade.receiver_district %>" 
    addressee_xiangxi="<%= trade.receiver_address %>" jijian_date="<%= "#{Time.now.year} #{Time.now.month} #{Time.now.day}" %>"
    shoujian_date="">

    <% trade.orders.each do |order| %>
      <% order.bill_info.each do |info| %>
      <%
        color_cont = ''
        if info[:colors].present?
        info[:colors].each do |color, array|
          color_cont += "#{array[0]}桶 #{color} #{array[1]}\r\n"
        end
        end
      %>
      <item code="<%= info[:storage_num] %>" num="<%= info[:number] * order.num %>" name="<%= info[:title] %>" color="&lt;font size='10'&gt;<%= color_cont %>&lt;/font&gt;" ></item>
      <% end %>
    <% end %>
  </trade>
  <% end %>
</data>
