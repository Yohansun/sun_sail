<div class="noborder_content">
  <table class="table table-hover table-bordered table-striped table-condensed js-table">
    <thead>
          <th width="5%"><input type="checkbox" onclick="$(this).parents().find(':checkbox').prop('checked',$(this).prop('checked'))"></th>
      <th>编号</th>
      <th>属性</th>
    </thead>
    <tbody>
      <% skus.each do |sku| %>
        <% unless sku.value == "默认" %>
          <tr>
            <td><input type="checkbox" name="sku_ids[]" value="<%= sku.id %>"></td>
            <td class="sku_id"><%= sku.sku_id %></td>
            <th class="sku_value"><%= sku.value  %></th>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>