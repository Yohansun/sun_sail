  <div class="row-fluid">
    <ul class="breadcrumb" style="position:relative;">
      <li><a href="/">Magic</a><span class="divider">/</span></li>
      <li class="active">商品管理</li>
      <li style="position:absolute;right:15px;top:6px;"><a class="btn_alert" href="/products/new">新增商品</a></li>
    </ul><!-- breadcrumb -->

    <!-- <div class="alert fade in">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>提示</strong>该功能正在研发中...
    </div> -->
    <%= simple_form_for "product",url: products_path, html: { method: "get", class: "well form-search"} ,:wrapper => :search do |f| %>
      <fieldset class="form-inline mar_t5">
        <div class="pull-left mar_r10">
           <label class="control-label" style="margin-top:5px; margin-right: 19px">精确搜索：</label>
            <select class="width_auto" name='info_type'>
              <option value="outer_id" <%= 'selected' if params[:info_type] == 'outer_id' %>>商品编码</option>
              <option value="product_id" <%= 'selected' if params[:info_type] == 'product_id' %>>淘宝ID</option>
              <option value="name" <%= 'selected' if params[:info_type] == 'name' %>>商品名称</option>
              <option value="sku_info" <%= 'selected' if params[:info_type] == 'sku_info' %>>商品属性</option>
            </select>
            <input type="text" name="info" style: "width:490px;" class="input-large" value='<%= params[:info] %>'>
          </div>
      </fieldset>
      <fieldset class="form-inline mar_t5">
          <fieldset class="form-inline">
            <label class="control-label" style="margin-top:5px; margin-right: 19px">商品分类：</label>
            <select class="width_auto" name="category_id">
              <option value="0" <%= 'selected' if params[:category_id] == '0' %>>全部</option>
              <%- Category.all.each do |category| %>
                <option value="<%= category.id %>" <%= 'selected' if params[:category_id] == category.id %>><%= category.name %></option>
              <%- end %>
            </select> 
          </fieldset>                            
        <div>
          <%= f.button :submit, "过滤", class: "btn btn-primary pull-right" %>
        </div>
      </fieldset>
    <% end %>

    <div class="controls clearfix">
      <div class="btns btn-group pull-left">
        <%= link_to "导出数据", products_path(:format => "xls"), :class => "btn btn-warning", "data-toggle" =>"modal" %>
        </ul>
      </div>
    </div>

    <table class="table table-striped table-bordered table-condensed td_colors mar_t">
      <thead>
        <tr>
          <th nowrap>商品名称</th>
          <th nowrap>商品编码</th>
          <th nowrap>淘宝ID</th>
          <th nowrap>价格</th>
          <th nowrap>分类</th>
          <th nowrap>商品类型</th>
          <th nowrap>操作</th>
        </tr>
      </thead>
      <tbody>
        <%= render @products %>
      </tbody>
    </table>

    <%= paginate @products %>

  </div>
</div>
