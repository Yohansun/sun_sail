    <table class="table table-striped table-bordered table-condensed td_colors mar_t">
      <thead>
        <tr>
          <th>选择</th><!-- 订单号，当前状态，订单状态，经销商，接口人，客户姓名，客户联系方式，客户地址，订单内容，总价，客户备注，调色，客服备注，拆单数 -->
          <th>商品编号</th>
          <th>商品名称</th>
          <th>淘宝id</th>
          <th>仓库编号</th>
          <th>商品图片</th>
          <th>规格</th>
          <th>分类</th>
          <th>系列</th>
          <th>档次</th>
          <th>状态</th>           
          <th>技术参数</th>
          <th>描述</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
         <% for product in @products %>
        <tr>
          <td></td>
          <td><%= product.iid %></td>
          <td><%= product.name %></td>
          <td><%= product.taobao_id %></td>
          <td><%= product.storage_num %></td>
          <td></td>
          <td><%= product.quantity %></td>
          <td><%= product.category %></td>
          <td><%= product.features %></td>
          <td><%= product.level %></td>
          <td><%= product.status %></td>
          <td><%= product.technical_data %></td>
          <td><%= product.description %></td>
          <td>
            <div class="btn-group">
              <button data-toggle="dropdown" class="btn btn-info dropdown-toggle min_w"><i class="icon-wrench"></i> <span class="caret"></span></button>
              <ul class="dropdown-menu" style="left:-115px;">
                <li><%= link_to '编辑', edit_product_path(product) %></li>
                <li><%= link_to '删除', product_path(product), :confirm => "确定删除?", :method=>:delete %></li>
                <li><a href="#">下架</a></li>
                <li><a href="#">查看详细</a></li>
              </ul>
            </div>
          </td>
        </tr>
        <% end %>
