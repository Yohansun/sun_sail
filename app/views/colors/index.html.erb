<div class="container-fluid">
  <header class="jumbotron subhead" id="overview">
    <div class="subnav">
      <ul class="nav nav-pills">
        <li><%= link_to '商品管理', products_path, class: "products" %></li>
        <li class="active"><%= link_to '颜色管理', colors_path %></li>
      </ul>
    </div>
  </header>
  <div class="row-fluid">
    <ul class="breadcrumb" style="position:relative;">
      <li>
        <%= link_to 'Magic', root_path %>
        <span class="divider">/</span>
      </li>
      <li class="active">颜色管理</li>
      <li style="position:absolute;right:15px;top:6px;">
        <%= link_to '新增颜色', new_color_path %>
      </li>
    </ul><!-- breadcrumb -->

    <table class="table table-striped table-bordered table-condensed vertical_mid">
      <thead>
        <tr>
          <th>颜色名</th>
          <th>色号</th>
          <th>编码</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
      	<% @colors.each do |color| %>
        <tr>
          <td><%= color.name %></td>
          <td><%= color.num %></td>
          <td><%= color.hexcode %></td>
          <td>
            <div class="btn-group">
              <button data-toggle="dropdown" class="btn btn-info dropdown-toggle min_w">
                <i class="icon-wrench"></i>
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu trade_pops" style="left:-115px;">
                <li><%= link_to '编辑', edit_color_path(color) %></li>
                <li><%= link_to '删除', color_path(color), method: :delete, confirm: '确认删除?' %></li>
              </ul>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate @colors %>
  </div>
</div>