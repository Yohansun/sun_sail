<div id="select_wangwang" class="modal hide fade" tabindex="-1">
  <div class="modal-header">
    <h3>旺旺过滤列表
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </h3>
  </div><!-- modal-header -->
  <div class="modal-body clearfix">
    <div id='wangwang_table'>
      <table class="table table-bordered table-striped pull-left w_55" id="wangwang_table_list">
      	<tr>
      		<th>用户名称</th>
      		<th>操作</th>
      	</tr>
      	<% @setting.wangwang_list.each do |key, value| %>
          <tr id='wangwang_<%= key %>'>
             <td><%= value %></td>
             <td><a href='/callcenter/remove_wangwang?u_id=<%= key %>' data-method='get' data-remote='true'>解除过滤</a></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="pull-right well w_35">
      <div id='wangwang_list'>
      	<% @wangwangs.each do |wangwang|%>
	      	<div class='controls' id='wangwang_list_<%= wangwang._id %>'>
	          <div>
					  	<input id="checkbox_id_<%=wangwang._id%>" class= "check_wangwang" type="checkbox" style="margin-top:-2px" onclick="add_wangwang('<%=wangwang._id%>')"><%= wangwang.short_id%>
	          </div>
			    </div>
		    <% end %>
      </div>
    </div>
  </div><!-- modal-body -->
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal" >取消</a>
  </div><!-- modal-footer -->
</div><!-- seller_area -->

<% content_for :tail do %>
<script type="text/javascript">
  <% @setting.wangwang_list.keys.each do |key| %>
    $('#wangwang_list_<%=key%>').hide();
    $('#checkbox_id_<%=key%>').removeAttr('checked');
  <% end %>

  function add_wangwang(u_id){
	  $.get("/callcenter/wangwang_list",{u_id:u_id}, function(result){
	  })
