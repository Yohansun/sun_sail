<style type="text/css">
  #dealer_area table th{width:18%;white-space:nowrap;}
  #dealer_area table td{overflow:hidden;word-wrap:break-word;}
</style>
<div class="container-fluid">
  <header class="jumbotron subhead" id="overview">
    <div class="subnav">
      <ul class="nav nav-pills">
        <li><a href="/users">用户管理</a></li>
        <li><a href="/areas">地域管理</a></li>
        <li class="dropdown active">
          <a >物流商管理</a>
        </li>
        <% if current_account.settings.enable_module_onsite_service == 1  %>
          <li><a href="/onsite_services">上门服务</a></li>
        <%- end %>
        <li><a href="/logistic_groups">物流分组管理</a></li>
      </ul>
    </div>
  </header>

  <div class="row-fluid">
    <ul class="breadcrumb" style="position:relative;">
      <li><a href="#">Magic</a><span class="divider">/</span></li>
      <li class="active">物流商管理</li>
      <li style="position:absolute;right:15px;top:6px;">
        <i class="icon-plus"></i><%= link_to "新增物流商", new_logistic_path, :class=>"btn_alert"%>
      </li>
    </ul><!-- breadcrumb -->

    <table class="table table-striped table-bordered table-condensed td_colors mar_t">
      <thead>
        <tr>
          <th>编号</th>
          <th>物流商名称</th>
          <th>Code</th>
          <th>操作</th>
        </tr>
      </thead>

      <tbody id="seller_rows">
        <%= render 'row' %>
      </tbody>
    </table>
    <%= paginate @logistics %>
  </div>
</div>

<div id="dealer_login" class="modal hide fade" tabindex="-1">
  <div class="modal-header">
    <h3>登录帐号设置
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </h3>
  </div><!-- modal-header -->
  <div class="modal-body clearfix">
    <div id='logistic_id_container' style="display:none"></div>
    <div id='user_table'>
      <table class="table table-bordered table-striped pull-left w_55" id="user_table_list">

      </table>
    </div>
    <div class="pull-right well w_35">
      <div class="input-append">
        <%= form_tag user_list_logistics_path,:remote => true do %>
          <%= text_field_tag "user_name", '',:value => "#{params[:user_name] if params[:user_name]}", :class => "input-large"%>
          <%= button_tag "搜索用户", :class => "btn btn-primary" %>
        <% end %>
      </div>
      <div id='user_list'>
      </div>
    </div>
  </div><!-- modal-body -->
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal" >取消</a>
  </div><!-- modal-footer -->
</div><!-- seller_area -->

<div id="dealer_area" class="modal hide fade" tabindex="-1">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3>管辖地区</h3>
  </div><!-- modal-header -->
  <div class="modal-body clearfix">
    <table class="table table-bordered table-striped pull-left w_55" id="logistic_area_list">
    </table>

    <div class="pull-right well w_35">
      <div id="ztree">
        <div class="zTreeDemoBackground left">
          <ul id="treeDemo" class="ztree"></ul>
        </div>
      </div>
    </div>
  </div><!-- modal-body -->
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal" >取消</a>
  </div><!-- modal-footer -->
</div><!-- dealer_area -->
