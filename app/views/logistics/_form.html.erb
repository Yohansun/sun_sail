<%= simple_form_for @logistic, html: {:class =>'well form-horizontal'} do |f| %>
  <fieldset class="add_unit">
    <%= f.input :name, :label => "物流商名称：",class: 'input-xlarge' %>
    <%= f.input :code, :label => "物流商Code：",class: 'input-xlarge' %>
    <%= f.input :xml, :label => "物流单模板：" %>
  </fieldset>

  <div class="form-actions">
    <%= f.button :submit, :value => "保存", class: "btn btn-primary edit"%>
  </div>
<% end %>
