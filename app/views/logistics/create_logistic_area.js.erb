html = "<tr><th>地区编号</th><th>省</th><th>市</th><th>区</th><th>操作</th></tr>"
<% if @logistics.present? %>
  <% @logistics.each do |logistics| %>
    html += "<tr id='area<%= logistics.area.id %>'><td><%=logistics.area.id%></td>" + 
    		"<td><%= logistics.area.try(:parent).try(:parent).try(:name)%></td>" +
            "<td><%= logistics.area.try(:parent).try(:name)%></td>" +
            "<td><%= logistics.area.name%></td>" +
            "<td><a href='/logistics/remove_logistic_area?id=<%=logistics.id%>&logistic_id=<%=logistics.logistic_id%>' data-method='get' data-remote='true'>解除绑定</a></td></tr>"
  <% end %>
<% end %>
$('#logistic_area_list').html(html)