<div class="container-fluid">
    <header class="jumbotron subhead" id="overview">
      <div class="subnav">
        <ul class="nav nav-pills">
          <li>
            <%= link_to Seller.find_by_id(params[:seller_id]).try(:name), seller_stocks_path(seller_id: params[:seller_id])%>
          </li>
          <li class="active"><a href="#">进销记录</a></li>
        </ul>
      </div>
    </header>
    <div class="row-fluid">
      <ul class="breadcrumb" style="position:relative;">
        <li><%= link_to 'Magic', root_path %><span class="divider">/</span></li>
        <li><%= link_to Seller.find(params[:seller_id]).name, seller_stocks_path(seller_id: params[:seller_id])%>
          <span class="divider">/</span>
        </li>
        <li class="active">进销记录</li>
      </ul><!-- breadcrumb -->

      <form class="well form-horizontal reset_space" action="<%= seller_stock_product_stock_history_index_path(params[:seller_id], params[:stock_product_id])%>" method='get'>
        <fieldset>
          <div class="control-group form-inline">
            <label class="control-label">时间范围：</label>
            <div class="controls">
              <input type="text" class="input-small search-query datepickers", name='bdate'>
              <input type="text" class="input-mini search-query timepickers", name='btime'>
              <i class="icon-arrow-right"></i>
              <input type="text" class="input-small search-query datepickers", name='edate'>
              <input type="text" class="input-mini search-query timepickers", name='etime'>
              <a href="javascript:void(0)">最近一周</a>
              <a href="javascript:void(0)">最近一月</a>
              <a href="javascript:void(0)">最近三月</a>
            </div>
          </div>
          <div class="control-group form-inline">
            <label class="control-label">操作行为：</label>
            <div class="controls">
              <label class="radio pad_t5">
                <input type="radio" name="optionsRadios" id="optionsRadios1" value="in">
                入库
              </label>
              <label class="radio pad_t5">
                <input type="radio" name="optionsRadios" id="optionsRadios2" value="out">
                出库
              </label>
              <label class="radio pad_t5">
                <input type="radio" name="optionsRadios" id="optionsRadios3" value="lock">
                锁定
              </label>
            </div>
          </div>
          <div class="noborder">
            <button type="submit" class="btn btn-primary">筛选</button>
            <button class="btn">重置</button>
          </div>
        </fieldset>
      </form>

      <table class="table table-striped table-bordered table-condensed vertical_mid">
        <thead>
          <tr>
            <th>操作时间</th>
            <th>操作行为</th>
            <th>订单号</th>
            <th>商品名称</th>
            <th>商品编码</th>
            <th>商品分类</th>
            <th>操作员</th>
            <th>数量</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @history.each do |h| %>
          <tr>
            <td><%= h.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td><%= h.operation %></td>
            <td><%= h.tid %></td>
            <td><%= h.stock_product.product.name %></td>
            <td><%= h.stock_product.product.outer_id %></td>
            <td><%= h.stock_product.product.try(:category).try(:name) %></td>
            <td><%= h.try(:user).try(:name) %></td>
            <td><%= h.number %></td>
            <td>
              <%= link_to '查看', seller_stock_product_stock_history_path(params[:seller_id], params[:stock_product_id], h.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @history %>
    </div>
    <hr>
  </div>
