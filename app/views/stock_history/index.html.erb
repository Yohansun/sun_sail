<div class="container-fluid">
    <header class="jumbotron subhead" id="overview">
      <div class="subnav">
        <ul class="nav nav-pills">
          <li>
            <%= link_to '成品仓库', seller_stocks_path(seller_id: params[:seller_id])%>
          </li>
          <li class="active"><a href="/stock_history">进销记录</a></li>
        </ul>
      </div>
    </header>
    <div class="row-fluid">
      <ul class="breadcrumb" style="position:relative;">
        <li><%= link_to '仓库管理', seller_stocks_path(seller_id: params[:seller_id])%><span class="divider">/</span></li>
        <li class="active">进销记录</li>
      </ul><!-- breadcrumb -->

      <form class="well form-horizontal reset_space">
        <fieldset>
          <legend class="font14">筛选条件：</legend>

          <div class="control-group form-inline">
            <label class="control-label">时间范围：</label>
            <div class="controls">
              <input type="text" class="input-small search-query datepicker">
              <input type="text" class="input-mini search-query timepicker">
              <i class="icon-arrow-right"></i>
              <input type="text" class="input-small search-query datepicker">
              <input type="text" class="input-mini search-query timepicker">
              <a href="javascript:void(0)">最近一周</a>
              <a href="javascript:void(0)">最近一月</a>
              <a href="javascript:void(0)">最近三月</a>
            </div>
          </div>
          <div class="control-group form-inline">
            <label class="control-label">操作行为：</label>
            <div class="controls">
              <label class="radio pad_t5">
                <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
                入库
              </label>
              <label class="radio pad_t5">
                <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                出库
              </label>
              <label class="radio pad_t5">
                <input type="radio" name="optionsRadios" id="optionsRadios3" value="option3">
                锁定
              </label>
            </div>
          </div>
          <div class="control-group form-inline">
            <div class="controls">
              <select class="width_auto">
                <option>商品编号</option>
                <option>淘宝ID</option>
                <option>商品名称</option>
              </select>
              <input type="text" class="input-large" id="">
            </div>
          </div>
          <div class="control-group form-inline">
            <label class="control-label">商品分类：</label>
            <div class="controls">
              <select class="width_auto">
                <option>全部</option>
                <option>网络特供商品</option>
                <option>内墙乳胶漆</option>
                <option>外墙乳胶漆</option>
                <option>木器漆</option>
                <option>DIY色彩系列</option>
                <option>輔助材料</option>
              </select>
            </div>
          </div>

          <div class="form-actions noborder">
            <button type="submit" class="btn btn-primary">筛选</button>
            <button class="btn">重置</button>
          </div>
        </fieldset>
      </form>

      <table class="table table-striped table-bordered table-condensed vertical_mid">
        <thead>
          <tr>
            <th>操作时间</th>
            <th>操作行为</th>
            <th>订单号</th>
            <th>商品名称</th>
            <th>淘宝ID</th>
            <th>商品分类</th>
            <th>操作员</th>
            <th>数量</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @history.each do |h| %>
          <tr>
            <td><%= h.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td><%= h.operation %></td>
            <td><%= h.tid %></td>
            <td><%= h.stock_product.product.name %></td>
            <td><%= h.stock_product.product.taobao_id %></td>
            <td><%= h.stock_product.product.category %></td>
            <td><%= h.user.name %></td>
            <td><%= h.number %></td>
            <td>
              <%= link_to '查看', seller_stock_product_stock_history_path(params[:seller_id], params[:stock_product_id], h.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @history %>
    </div>
    <hr>
  </div>
