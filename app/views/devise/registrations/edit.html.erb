<% content_for :sub_nav do %>
  <ul class="nav nav-tabs">
    <li class="active">
      <a href="/edit">个人设置</a>
    </li>
    <li>
      <a href="/sale_areas">绑定区域</a>
    </li>
  </ul>
<% end %>

<div class="tab-pane active" id="mycenter">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put ,:class =>'well form-horizontal'}) do |f| %>
    <%= f.error_notification %>
    <div class="row-fluid">
      <fieldset class="span12">
        <%= f.input :username, :required => true, :autofocus => true,:label => "用户名" %>
        <%= f.input :name, :label => "姓名" %>
        <%= f.input :email, :required => true, :label => "邮箱地址" %>
        <%= f.input :phone, :label => "手机" %>
        <%= f.input :current_password, :required => true, :label => " 当前密码" %>
        <fieldset class="add_unit">
          <div class="control-group">
            <%= f.input :password_confirmation, :required => false,:label => "更新密码" %>
          </div>
          <div class="control-group">
            <%= f.input :password, :autocomplete => "off", :required => false,:label => "重复更新密码" %>
          </div>
        </fieldset>
      </fieldset>
      <div class="span11 offset1">
        <%= f.button :submit, :value => "保存", class: "btn btn-small"%>
      </div>
    </div>
  <% end %>
</div>