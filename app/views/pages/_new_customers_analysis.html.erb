<div class="portlet box purple">
  <div class="portlet-title">
    <div class="caption"><i class="icon-calendar"></i>顾客分析</div>
    <div class="actions">
      <a href="javascript:;" class="btn yellow easy-pie-chart-reload-customers"><i class="icon-repeat"></i> 刷新</a>
    </div>
  </div>
  <div class="portlet-body">
    <div class="row-fluid">
      <div class="span4">
        <div class="easy-pie-chart">
          <div class="number potential_customers_percent"  data-percent="<%= (Rails.cache.read("customers_percent_analysis")["potential_percent"] || 0) %>"><span><%= (Rails.cache.read("customers_percent_analysis")["potential_percent"] || 0) %></span>%</div>
          <a class="title" href="#">潜在下单顾客 <i class="m-icon-swapright"></i></a>
        </div>
      </div>
      <div class="margin-bottom-10 visible-phone"></div>
      <div class="span4">
        <div class="easy-pie-chart">
          <div class="number new_customers_percent"  data-percent="<%= (Rails.cache.read("customers_percent_analysis")["new_percent"] || 0) %>"><span><%= (Rails.cache.read("customers_percent_analysis")["new_percent"] || 0) %></span>%</div>
          <a class="title" href="#">新增购买顾客 <i class="m-icon-swapright"></i></a>
        </div>
      </div>
      <div class="margin-bottom-10 visible-phone"></div>
      <div class="span4">
        <div class="easy-pie-chart">
          <div class="number familiar_customers_percent"  data-percent="<%= (Rails.cache.read("customers_percent_analysis")["familiar_percent"] || 0) %>"><span><%= (Rails.cache.read("customers_percent_analysis")["familiar_percent"] || 0) %></span>%</div>
          <a class="title" href="#">经常购买顾客 <i class="m-icon-swapright"></i></a>
        </div>
      </div>
    </div>
  </div>
</div>