<%- @refund_products.each do |refund_product|%>
$("#status_<%= refund_product.id %>").replaceWith("<%= j render('status', refund_product: refund_product) %>")
$("#operation_<%= refund_product.id %>").replaceWith("<%= j render('operation', refund_product: refund_product) %>")
<%- end %>
<% if @refund_products.any? {|x| x.errors.present?} %>
  alert("<%= @refund_products.collect {|x| x.errors.full_messages}.flatten.join("\n") %>")
<% end %>