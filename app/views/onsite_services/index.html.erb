<style type="text/css">
  #dealer_area table th{width:18%;white-space:nowrap;}
  #dealer_area table td{overflow:hidden;word-wrap:break-word;}
</style>
<div class="container-fluid">
  <header class="jumbotron subhead" id="overview">
    <div class="subnav">
      <ul class="nav nav-pills">
        <li><a href="/users">用户管理</a></li>
        <li><a href="/areas">地域管理</a></li>
        <li><a href="/logistics">物流商管理</a></li>
        <li class="dropdown active">
          <a>上门服务</a>
        </li>
        <% if current_account.settings.enable_module_logistic_group == 1 %>
          <li><a href="/logistic_groups">物流分组管理</a></li>
        <%- end %>
      </ul>
    </div>
  </header>

  <div class="row-fluid">
    <ul class="breadcrumb" style="position:relative;">
      <li><a href="/">Magic</a><span class="divider">/</span></li>
      <li class="active">上门服务</li>
    </ul><!-- breadcrumb -->

    <%= form_tag onsite_services_path, :class=>"well form-search", method:'get' do %>
      <fieldset class="form-inline">
        <div class="controls">
          <%= select_tag "keyword", options_for_select([["地域名","name"]]), :value => "#{params[:keyword]}" %>
          <div class="input-append">
            <%= text_field_tag "value", '',:value => "#{params[:value] if params[:value]}", :class => "input-large"%>
            <%= button_tag "过滤", :class => "btn" %>
          </div>
        </div>
      </fieldset>
    <% end %>

    <table class="table table-striped table-bordered table-condensed td_colors mar_t">
      <thead>
        <tr>
          <th>地区编号 </th>
          <th>省份</th>
          <th>已提供上门服务</th>
          <th>操作</th>
        </tr>
      </thead>

      <tbody id="seller_rows">
        <%= render 'row' %>
      </tbody>
    </table>
    <%= paginate @states %>
  </div>
</div>

<div id="onsite_service_area" class="modal hide fade" tabindex="-1">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3>上门服务</h3>
  </div><!-- modal-header -->
  <div class="modal-body clearfix">
    <table class="table table-bordered table-striped pull-left w_55" id="onsite_service_area_list">
    </table>

    <div class="pull-right well w_35">
      <div id="ztree">
        <div class="zTreeDemoBackground left">
          <ul id="treeDemo" class="ztree"></ul>
        </div>
      </div>
    </div>
  </div><!-- modal-body -->

  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal" >取消</a>
  </div><!-- modal-footer -->

</div><!-- dealer_area -->
