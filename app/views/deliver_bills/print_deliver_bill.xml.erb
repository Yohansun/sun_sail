<?xml version="1.0" encoding="utf-8" ?>
<data>
  <% @bills.each do |bill| %>
  <% trade = bill.trade %>
  <trade
    id                 = '<%= bill.id %>'
    serial_number       = '<%= bill.print_batches.last.try(:serial_num) %>'
    tid                = "<%= trade.tid %>"
    company            = "<%= trade.shop_name %>"
    phone              = "<%= trade.receiver_mobile %>"
    address            = "<%= "#{trade.receiver_state} #{trade.receiver_city} #{trade.receiver_district} #{trade.receiver_address}" %>"
    memo               = "<%= trade.cs_memo %>"
    num                = "<%= item_count(bill) %>"
    copyright          = "Magic"
    receiver           = "<%= trade.receiver_name %>"
    nameOfOrganization = "<%= trade.seller_nick %>"
    address_xiangxi    = "<%= "#{trade.receiver_state} #{trade.receiver_city} #{trade.receiver_district} #{trade.receiver_address}" %>"
    studiocamera       = "152252658"
    kehu_receiver      = "<%= trade.receiver_name %>"
    city               = "<%= trade.receiver_city %>"
    organization       = "<%= trade.try(:cs_memo) %>"
    kehu_phone         = "<%= trade.receiver_mobile || trade.receiver_phone %>"
    jijian_name        = ""
    point              = ""
    jijian_dizhi       = ""
    shoujian_dizhi     = "<%= "#{trade.receiver_state} #{trade.receiver_city} #{trade.receiver_district} #{trade.receiver_address}" %>"
    shoujian_youbian   = ""
    jijian_youbian     = ""
    jijian_zuoji       = ""
    shoujian_zuoji     = ""
    address_sheng      = "<%= trade.receiver_state %>"
    address_shi        = "<%= trade.receiver_city %>"
    address_zhen       = "<%= trade.receiver_district %>"
    addressee_sheng    = "<%= trade.receiver_state %>"
    addressee_shi      = "<%= trade.receiver_city %>"
    addressee_zhen     = "<%= trade.receiver_district %>"
    addressee_xiangxi  = "<%= trade.receiver_address %>"
    jijian_date        = "<%= "#{Time.now.year} #{Time.now.month} #{Time.now.day}" %>"
    product_total_num  = "<%= bill.bill_products.inject(0){|sum, product| sum+= product.number}%>"
    shoujian_date      = ""
    address_xian       = "这是县"
    addressee_xian     = "这是县"
    qianshouren        = "签收人"
    qianshou_date      = "签收时间"
    prompt             = "温馨提示"
    bianma             = "商品编码"
    mingcheng          = "商品名称"
    shuxing            = "商品属性"
    shuliang           = "单个数量数量"
    tiaose             = "调色信息"
    print_date         = "打印时间"
    fenliu_date        = "分派时间"
    fahuo_date         = "发货时间"
    fukuan_date        = "付款时间"
    xiadan_date        = "下单时间"
    kdd_weight         = "重量"
    kdd_number         = "数量"
    kdd_pinming        = "内件品名"
    kdd_zifei          = "资费"
    kdd_baojiafei      = "保价费"
    kdd_zongfei        = "费用总计"
    kdd_width          = "物品宽度"
    kdd_height         = "物品高度"
    kdd_length         = "物品长度"
  >
    <% bill.bill_products.each do |bill_product| %>
    <item
      code=            "<%= bill_product.outer_id %>"
      storage_num=     "<%= bill_product.product.try(:storage_num) %>"
      sku_name=        "<%= bill_product.sku_name %>"
      num=             "<%= bill_product.number %>"
      name=            "<%= bill_product.title %>"
      local_name=      "<%= bill_product.product.try(:name) %>"
      property_memos=  "<%= bill_product.property_memos.join("\n") %>"
      color=           "&lt;font size='10'&gt;<%= bill_product.color_info %>&lt;/font&gt;"
    ></item>
    <% end %>
  </trade>
  <% end %>
</data>