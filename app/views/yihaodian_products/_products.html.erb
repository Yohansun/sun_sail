<p><h4>新增商品</h4></p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>商品ID</th>
      <th>商品名称</th>
      <th>商品类型</th>
      <th>上下架状态</th>
      <th>所属店铺</th>
    </tr>
  </thead>
  <tbody>
    <% @latest_products.each_with_index do |product,index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= product.product_id %></td>
      <td><%= product.product_cname %></td>
      <td><%= product.genre_name %></td>
      <td><%= product.can_sale_name %></td>
      <td><%= product.shop_name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<p><h4>属性变更商品</h4></p>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>商品ID</th>
      <th>商品名称</th>
      <th>商品类型</th>
      <th>商品状态</th>
      <th>所属店铺</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @changed_products.each_with_index do |product,index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= product.product_id %></td>
      <td><%= product.product_cname %></td>
      <td><%= product.genre_name %></td>
      <td><%= product.can_sale_name %></td>
      <td><%= product.shop_name %></td>
      <td>
        <% product.changes.each do |change| %>
        <strong><%= column_humanize("yihaodian_product." + change.first.to_s) %>:</strong><span class="label label-important">-<%= change.last[0] %></span>
        <span class="label label-success">+<%= change.last[1] %></span></br>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>