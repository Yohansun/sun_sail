<%- model_class = Sku -%>

<div class="container-fluid">

  <ul class="nav nav-tabs affix">
    <li class="active"><a href="/products">本地单品</a></li>
    <li><a href="/products/taobao_products">淘宝商品</a></li>
    <!-- <li><a href="#set_good" data-toggle="tab">套装</a></li>
    <li><a href="#active_goods" data-toggle="tab">活动商品</a></li> -->
  </ul><!-- nav-tabs -->

  <div class="" style="margin-top:50px;">
     <%=link_to @product.name, @product%> / SKUs
  </div>

  <div class="btn-toolbar">
    <!--
    <div class="btn-group">
      <button class="btn btn-warning" id="product_operations">操作</button>
      <button class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><a href="#" id="show_product">查看</a></li>
        <li><a href="#" id="edit_product">编辑</a></li>
        <li><a href="#" id="product_on_sale">上/下架</a></li>
        <li><a href="#" id="export_products">导出</a><%#= link_to "导出", products_path(:format => "xls"), id: "export_products" %></li>
      </ul>
    </div><!-- btn-group -->

    <%= link_to "创建SKU",[:new, @product, :sku], :class => 'btn btn-warning' %>
  </div><!-- btn-groups end -->

  <div class="actions">
    
  </div>

  <table class="table table-striped table-bordered table-condensed td_colors mar_t">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:sku_id) %></th>
        <th><%= model_class.human_attribute_name(:num_iid) %></th>
        <th><%= model_class.human_attribute_name(:properties) %></th>
        <th><%= model_class.human_attribute_name(:quantity) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @skus.each do |sku| %>
        <tr>
          <td><%= link_to sku.id, [@product,sku] %></td>
          <td><%= sku.sku_id %></td>
          <td><%= sku.num_iid %></td>
          <td><%= sku.name %></td>
          <td><%= sku.quantity %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        [:edit, @product, sku], :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        [@product, sku],
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
