<%= render 'crumbs' %>

<div class="row-fluid">
  <div class="span10 w100">

    <%= render 'nav_tabs' %>

    <div class="tab-content">
      <div class="tab-pane active" id="automerge_settings">
        <%= form_tag('/account_setups/update_automerge_settings', class: 'form-horizontal', method: 'put') do -%>
          <fieldset class="mar_l80"><!-- 订单自动合并 beginning -->
            <h4>订单自动合并设置：</h4>
            <div class="mar_l80">
              <div class="control-group">
                <%= @setting.block_dual_radio('auto_merge') %>
                <%= @setting.block_time_range(['auto_merge_start_at'], ['auto_merge_end_at'])%>
              </div>
              <div>
                <%= @setting.block_label_select([["15分钟", 15], ["30分钟", 30], ["1小时", 60], ["2小时", 120], ["3小时", 180], ["4小时", 240]], ["auto_merge_pay_time_interval"], "付款间隔时间：", "") %>
              </div>
            </div>
          </fieldset>
          <div class="pagination-centered mar_t30">
            <button id="auto_settings_button" class="btn btn-primary" type="submit">保存</button>
          </div>
        <% end %>
      </div>
    </div><!-- tab-content end -->
  </div>
</div>