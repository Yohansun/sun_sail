<%
  breadcrumb << ["自动化设置", "/account_setups/edit_preprocess_settings"]
  breadcrumb << ["订单预处理"]
%>
<div class="row-fluid">
  <div class="span10 w100">
    <ul class="nav nav-tabs" style="margin-top: 5px;">
      <li class="active"><a href="/account_setups/edit_preprocess_settings">订单预处理</a></li>
      <li><a href="/account_setups/edit_dispatch_settings">订单分派</a></li>
      <li><a href="/account_setups/edit_deliver_settings">订单发货</a></li>
      <li><a href="/account_setups/edit_automerge_settings">自动合并订单</a></li>
      <!--<li><a href="#default_logistics" data-toggle="tab">选择默认物流商</a></li>
      <li><a href="#autobusiness_set" data-toggle="tab">自动化业务设置</a></li>
      <li><a href="#login_user_set" data-toggle="tab">设置系统登录用户</a></li> -->
    </ul><!-- nav-tabs -->
    <div class="tab-content">
      <div class="tab-pane active" id="users">
        <%= form_tag('/account_setups/update_preprocess_settings', class: 'form-horizontal', method: 'put') do -%>
            <fieldset class="mar_l80"><!-- 订单预处理 beginning -->
              <h4>订单预处理设置：</h4>
              <div>
                <p class="clear">
                  <label class="input-large pull-left">请选择自动预处理时间范围：</label>
                  <input type="text" class="input-mini timepickers radius_no_rb" name="auto_settings[start_preprocess_at]" value="<%= @setting['start_preprocess_at']%>">
                  <i class="icon-arrow-right"></i>
                  <input type="text" class="input-mini timepickers radius_no_rb" name="auto_settings[end_preprocess_at]" value="<%= @setting['end_preprocess_at']%>">
                  <span class="muted">(不选择默认为全天开启)</span>
                </p>
              </div>
              <div>
                <p class="clear">
                  <label class="input-large pull-left">请选择自动预处理静默时间：</label>
                  <select name="auto_settings[preprocess_silent_gap]" class="input-mini">
                  <% [0,1,2,6,12,24,48,72].each do |i| %>
                  <option value= "<%= i %>" <%= 'selected' if @setting['preprocess_silent_gap'] == i.to_s %>><%= i %></option>
                  <% end %>
                  </select>小时
                </p>
              </div>

              <div>
                <label class="input-large pull-left">自动同步备注：</label>
                <div class="controls ml210">
                  <div class="control-group">
                    <label class="radio pull-left input-small">
                      <input type="radio" name="auto_settings[auto_sync_memo]" <%='checked' if @setting['auto_sync_memo'] == 1 %>>开启
                    </label>
                    <label class="radio pull-left input-small">
                      <input type="radio" value="off" name="auto_settings[auto_sync_memo]" <%='checked' if @setting['auto_sync_memo'].present? == false %>>关闭
                    </label>
                    <div>
                      <p class="mt2 muted">将淘宝的顾客备注，同步到系统中的客服备注</p>
                    </div>
                  </div>
                </div>
              </div>
              <div>
                <label class="input-large pull-left">自动标注异常订单(默认一天标注一次)：</label>
                <div class="controls ml210">
                  <div class="control-group">
                    <label class="radio pull-left input-small">
                      <input type="radio" name="auto_settings[auto_mark_unusual_trade]" <%='checked' if @setting['auto_mark_unusual_trade'] == 1 %>>开启
                    </label>
                    <label class="radio pull-left input-small">
                      <input type="radio" value="off" name="auto_settings[auto_mark_unusual_trade]" <%='checked' if @setting['auto_mark_unusual_trade'].present? == false %>>关闭
                    </label>
                    <div>
                      <p class="mt2 muted">满足以下被勾选的条件的订单，将被自动标记为异常订单</p>
                      <table class="table table-condensed noborder">
                        <thead>
                        <tr>
                          <th>订单状态异常</th>
                        </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td>
                              <input type="checkbox" class="pull-left" style="margin-top:4px;" name="auto_settings[unusual_conditions][unusual_waitpay]" <%= 'checked' if @setting['unusual_conditions']['unusual_waitpay'] == 1 %>>当订单已下单，超过
                              <select name="auto_settings[unusual_conditions][max_unpaid_days]" class="input-mini">
                                <% (1..7).each do |i| %>
                                  <option value= "<%= i %>" <%= 'selected' if @setting['unusual_conditions']["max_unpaid_days"] == i.to_s %>><%= i %></option>
                                <% end %>
                              </select>天未付款
                            </td>
                          </tr>
                          <tr>
                            <td>
                              <input type="checkbox" class="pull-left" style="margin-top:4px;" name="auto_settings[unusual_conditions][unusual_dispatch]" <%= 'checked' if @setting['unusual_conditions']['unusual_dispatch'] == 1 %>>当订单已付款，超过
                              <select name="auto_settings[unusual_conditions][max_undispatched_days]" class="input-mini">
                                <% (1..7).each do |i| %>
                                  <option value= "<%= i %>" <%= 'selected' if @setting['unusual_conditions']["max_undispatched_days"] == i.to_s %>><%= i %></option>
                                <% end %>
                              </select>天未分派
                            </td>
                          </tr>
                          <tr>
                            <td>
                              <input type="checkbox" class="pull-left" style="margin-top:4px;" name="auto_settings[unusual_conditions][unusual_deliver]" <%= 'checked' if @setting['unusual_conditions']['unusual_deliver'] == 1 %>>当订单已分派，超过
                              <select name="auto_settings[unusual_conditions][max_undelivered_days]" class="input-mini">
                                <% (1..7).each do |i| %>
                                  <option value= "<%= i %>" <%= 'selected' if @setting['unusual_conditions']["max_undelivered_days"] == i.to_s %>><%= i %></option>
                                <% end %>
                              </select>天未发货
                            </td>
                          </tr>
                          <tr>
                            <td>
                              <input type="checkbox" class="pull-left" style="margin-top:4px;" name="auto_settings[unusual_conditions][unusual_receive]" <%= 'checked' if @setting['unusual_conditions']['unusual_receive'] == 1 %>>当订单已发货，超过
                              <select name="auto_settings[unusual_conditions][max_unreceived_days]" class="input-mini">
                                <% 7.downto(1) do |i| %>
                                  <option value= "<%= i %>" <%= 'selected' if @setting['unusual_conditions']["max_unreceived_days"] == i.to_s %>><%= i %></option>
                                <% end %>
                              </select>天未实际收货
                            </td>
                          </tr>
                          <tr>
                            <td>
                              <input type="checkbox" class="pull-left" style="margin-top:4px;" name="auto_settings[unusual_conditions][unusual_repair]" <%= 'checked' if @setting['unusual_conditions']['unusual_repair'] == 1 %>>当订单已标记，超过
                              <select name="auto_settings[unusual_conditions][max_unrepaired_days]" class="input-mini">
                                <% (1..7).each do |i| %>
                                  <option value= "<%= i %>" <%= 'selected' if @setting['unusual_conditions']["max_unrepaired_days"] == i.to_s %>><%= i %></option>
                                <% end %>
                              </select>天未处理异常
                            </td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </fieldset>
            <div class="pagination-centered mar_t30">
              <button id="auto_settings_button" class="btn btn-primary" type="submit">保存</button>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>